<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds: </h1>
    <a href="/campgrounds/new">Add Campground</a>

    <% for(let campground of campgrounds) { %>

        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (campground.images.length) { %>
                        <img src="<%= campground.images[0].url %>" alt="" class="img-fluid">
                    <% } else { %>
                        <img src="https://res.cloudinary.com/dhrujpm4m/image/upload/v1751890746/YelpCamp/evkzursottcxjhukbgvx.jpg" alt="" class="img-fluid">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %></h5>
                        <p class="card-text"><%= campground.description %></p>
                        <p class="card-text">
                            <small class="text-secondary"><%= campground.location %></small>
                        </p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">details</a>
                    </div>
                </div>
            </div>
        </div>

    <% } %>